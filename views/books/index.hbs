<div class="breadcrumbs" ><a href="../">Home</a> / All Books</div>
<h2 "main-title">Search Books</h2>
<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label for="">Title</label>
      <input type="text" name="title" value="{{searchOptions.title}}">
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="">Publish after</label>
      <input type="date" name="publishedAfter" value="{{searchOptions.publishedAfter}}">
    </div>
    <div class="form-item">
      <label for="">Publish before</label>
      <input type="date" name="publishedBefore" value="{{searchOptions.publishedBefore}}">
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br>
<h2 "main-title">All Books</h2>
<div class="book-grid">
  {{#each books}}
  <a href="/books/{{id}}">
    <img class="book-cover" src="{{coverImagePath}}">
  </a>
  {{/each}}
</div>