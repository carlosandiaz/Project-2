<h2 "main-title">Edit Author</h2>
<form action="/authors/{{author.id}}?_method=PUT" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label for="">Name</label>
            <input type="text" name="name" value="{{author.name}}">
        </div>
    </div>
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/authors/{{author.id}}">Cancel</a>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>